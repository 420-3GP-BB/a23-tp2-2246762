            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="425"/>
                <ColumnDefinition Width="425"/>
                <ColumnDefinition Width="425"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
            </Grid.RowDefinitions>
            <DockPanel Margin="0,0,0,-30">
                <TextBlock Text="Getting Things Done©"
                   FontFamily="Times New Roman"
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0,10,0,0"
                   VerticalAlignment="Top"/>
                
            </DockPanel>
            <StackPanel Grid.Column="2">
                <TextBlock  Name="DateText"
           FontFamily="Times New Roman"
           FontSize="20"
           FontWeight="Bold"
           Margin="0,10,-10,0" Width="220"
           />
                
            </StackPanel>
            <StackPanel Grid.Column="2">
                <Button Content="+" Click="Button_Click" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold" Width="200" Margin="0,0,-250,0"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="40,62,25,-629">
                <TextBlock Text="Boite d'entrées" FontSize="26" FontWeight="Bold"
                           Height="38" Width="190"/>
                <ListBox x:Name="Entrer" Style="{StaticResource champSaisie}" Height="554"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="40,62,25,-629">
                <TextBlock Text="Prochaine actions" FontSize="26" FontWeight="Bold"
               Height="38" Width="220"/>
                <ListBox x:Name="Action" Style="{StaticResource champSaisie}" Height="554"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="2" Margin="40,62,25,-629">
                <TextBlock Text="Système de suivi" FontSize="26" FontWeight="Bold"
   Height="38" Width="208"/>
                <ListBox x:Name="Suivi" Style="{StaticResource champSaisie}" Height="554"/>
            </StackPanel>

        </Grid>
    </DockPanel>

</Window>
