<Window x:Class="BdeBGTD.dateSuivi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BdeBGTD"
        mc:Ignorable="d"
        Title="dateSuivi" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/andretti094_a_diamond_on_the_top_of_a_gold_mountain_b844ac04-17af-44bd-87b7-81498e2b882a.png" Stretch="None" TileMode="FlipY"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" FontSize="32" FontWeight="Bold"> Date de suivi </TextBlock>
        <Calendar
            VerticalAlignment="Center" Background="{x:Null}"
            Name="selectionDate"
            MouseDoubleClick="selectionDate_MouseDoubleClick"
        />
        <Button MaxHeight="25" MaxWidth="150" Margin="0,250,0,0">Annuler</Button>

    </Grid>
</Window>
