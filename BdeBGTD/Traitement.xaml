<Window x:Class="BdeBGTD.Traitement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BdeBGTD"
        mc:Ignorable="d"
        Title="Bdeb GTD" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="260"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
       FontWeight="Bold"
       FontFamily="Times new roman"
       FontSize="28"
       >Tri de la boîte d'entrée
        </TextBlock>

        <TextBox Grid.Row="1"
                 VerticalAlignment="Center"
                 Margin="42,0,370,0"
                 MaxWidth="400" Height="40"></TextBox>
        <Button Grid.Row="1" 
                HorizontalAlignment="Right"
                Width="150" Margin="300,10,175,10">Retour</Button>
        <TextBox Grid.Row="2"></TextBox>
    </Grid>

</Window>
